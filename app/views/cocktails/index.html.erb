
<div class="container-fluid">
  <div class="parent">
    <% @cocktails.each do |cocktail| %>
    <div class="card-cocktail">
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      <div class="card-cocktail-infos">
        <div>
         <span> <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <h2><%= link_to "X", cocktail_path(cocktail, method: :delete, data:{confirm:"U sure ?"}) %></h2></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
